html {
  color: #333;
  background-color: #F5F6F6;
  text-size-adjust: 100%;
}

html * {
  box-sizing: border-box;
  word-wrap: break-word;
  word-break: break-all;
  outline: none;
  text-size-adjust: none;
  tap-highlight-color: rgba(0, 0, 0, 0);
}

html,
body {
  font-family: system-ui;
  line-height: 1.2;
  height: 100vh;
}

body,
div,
dl,
dt,
dd,
ul,
ol,
li,
h1,
h2,
h3,
h4,
h5,
h6,
pre,
code,
form,
fieldset,
legend,
input,
textarea,
p,
blockquote,
th,
td,
hr,
button,
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section {
  margin: 0;
  padding: 0;
  font-size: 14px;
}

button {
  border: none;
}

input,
select {
  vertical-align: middle;
}

table {
  border-spacing: 0;
  border-collapse: collapse;
}

fieldset,
img {
  border: 0;
}

img {
    content: normal !important;
}

del {
  text-decoration: line-through;
}

address,
caption,
cite,
code,
dfn,
em,
i,
th,
var {
  font-weight: 500;
  font-style: normal;
}

ol,
ul {
  list-style: none;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 500;
}
.blank {
  padding: 40px 24px;
}

[v-cloak] {
  display: none;
}

.fl {
  display: inline-block;
  float: left;
}

.fr {
  display: inline-block;
  float: right;
}

.center {
  text-align: center;
}

a,
a:link,
a:hover,
a:active {
  text-decoration: none;

  color: #666;
}

.bold {
  font-weight: 600;
}

.scale8 {
  transform: scale(0.8);
}
.Semibold {
  font-family: Semibold;
}

.Regular {
  font-family: Regular;
}

.fr {
  float: right;
}
.pr {
  position: relative;
}
.fl {
  float: left;
}
.tr {
  text-align: right;
}
.tc {
  text-align: center;
}
.tl {
  text-align: left;
}
.clear:after {
  content: '';
  display: block;
  clear: both;
}
.vm {
    &:after{
    content: '';
    width: 0;
    height: 100%;
    display: inline-block;
    vertical-align: middle;
  }
}

.bgWhite {
  background: #fff;
}
.flex {
  display: flex;

  &.fdc {
    flex-direction: column;
  }


  & .cell {
    flex-grow: 1;
  }

  &.aic {
    align-items: center;
  }

  &.jcc {
    justify-content: center;
  }
  &.jce {
    justify-content: flex-end;
  }
  &.air {
    align-items: flex-end;
  }
}

.cblue {
  background-color: #0075B0;
}
.shadow {
  box-shadow: 2px 2px 5px #888888;
}
.pointer {
  cursor: pointer;
}
.blank-gray {
  height: 40px;
  background: linear-gradient(180deg, #F5F7FE, #D0CCCC, #CECCCC)
}
.border-gray {
  border 1px solid #D0CCCC
}
.border-deep-gray {
  border 3px solid #AFA9A9  
}
.page-btn {
  @extend .vm;
  width: 100px;
  height: 30px;
  border: 1px solid #BFBFBF;
  background: linear-gradient(180deg, #F5F7FE, #D0CCCC, #CECCCC);
  margin-left: 10px;
  font-size: 14px;
  text-align: center;
  cursor: pointer;
}
.p-title {
  font-weight: bold;
  font-size: 18px;
  font-style: italic;
  color: #000;
}
.input {
  border: 1px solid black;
  border-radius: 3px;  
  width: 100px;
  height: 20px;
  font-size: 14px;
  padding: 0 5px;
  background-color: #fff;
  margin-left: 3px;
  margin-right: 3px;
}
.line-col-gray {
  width: 80%;
  height: 1px;
  background-color: #989898;
  margin: 30px 0;
}
.submit-btn {
  width: 100px;
  height: 30px;
  background: #0075B0;
  color: #fff;
  border-radius: 3px;
  cursor pointer
}
.btn {
  background: #BABABA;
  color: #fff;
  border-radius: 3px;
  cursor pointer 
  border 1px solid #9B9B9B;
  color: #000;
  width: 50px;
  text-align: center;
}
.cell-class-name {
  height: 30px;
  text-align: center;
  border: 1px solid #fff;
}
.row-class-name {
  background: #CDD8F6;

  &:nth-child(2n) {
    background: #E9ECFA;
  }
}
.handlemyclass {
  background: #0075B0;
  color: #fff;
  height: 30px;
  font-size: 12px;
  border: 1px solid #fff;
}
.checkbox {
  width: 14px;
  height: 14px;
  background: #fff;  
}
.textarea {
  width: 80%;
  height: 50px;  
}
.choose-time {
  margin: 0 3px;
}
